{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "vitest/globals"
    ],
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@components": [
        "src/components/index.ts"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@utils": [
        "src/utils/index.ts"
      ],
      "@api": [
        "src/api/index.ts"
      ],
      "@testing": [
        "src/__testing__/index.ts"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "vitest.config.js"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}